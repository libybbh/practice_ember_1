<h1>Posts list</h1>
<label>User Id:</label>
<div class="input-container">
  {{input type="number" min="1" max="100" value=userId}}
</div>
<label>Title:</label>
<div class="input-container">
  {{input value=title}}
</div>
<label>Body:</label>
<div class="input-container">
  {{input value=body}}
  <div id="btn">                  {{!-- is it possible to rewrite input in {{}}? problems with action --}}
    <input type="button" id ="addPost-btn" value="Add" {{action 'addPost' userId title body}} disabled={{isDisabled}}/>
  </div>
</div>

{{#each reverse as |postUnit|}}
  {{post-listing post=postUnit}}
{{/each}}